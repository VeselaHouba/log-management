# {{ ansible_managed }}

"/var/log/cron"
"/var/log/maillog"
"/var/log/messages"
"/var/log/secure"
"/var/log/spooler"
{
  compress
  daily
  delaycompress
  missingok
  rotate {{ lm_logrotate_syslog_retention | int }}
  sharedscripts
  postrotate
    /bin/kill -HUP `cat /var/run/syslogd.pid 2> /dev/null` 2> /dev/null || true
  endscript
}
